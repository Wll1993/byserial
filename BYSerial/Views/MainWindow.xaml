                    <TextBlock Text="{DynamicResource quickTip}" Foreground="Red" 
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="10" FontWeight="Bold"
                               Grid.Row="1" TextWrapping="Wrap"
                               />
                    <Border Grid.Row="2" Margin="5" 
                        BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="1">
                        <Grid TextElement.FontSize="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text=" "
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{DynamicResource qcItemNo}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{DynamicResource qcItemDelay}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="{DynamicResource qcItemCmd}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <ListBox Grid.Row="1" Grid.ColumnSpan="4"
                                     ItemsSource="{Binding FastCmdList}"
                                     ItemTemplate="{StaticResource CmdListTemplate }"
                                     SelectedIndex="{Binding FastCmdSelIndex}"
                                     SelectedItem="{Binding CurSelectedFastCmdModel}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="1"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Grid>
                        <!--<DataGrid  TextElement.FontSize="15"
                            Style="{StaticResource DataGridStyle}" 
                            ItemsSource="{Binding FastCmdList}"
                            SelectedIndex="{Binding FastCmdSelIndex}"
                            CanUserSortColumns="False"
                            >
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="编号"  Width="80" MinWidth="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected,UpdateSourceTrigger=PropertyChanged}"
                                                  Content="{Binding CmdNum}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="延迟" Width="auto" MinWidth="80"
                                    Binding="{Binding DelayTime}" Visibility="Collapsed"/>
                                <DataGridTextColumn Header="数据" Width="Auto" MinWidth="110"
                                    Binding="{Binding CmdString}" Visibility="Collapsed"/>
                                <DataGridTemplateColumn Header="备注"  Width="auto" MinWidth="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate >
                                            <Button Content="{Binding Remark}"                                      
