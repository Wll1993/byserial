<Window x:Class="BYSerial.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BYSerial.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="更新窗口" Height="300" Width="300">
    <StackPanel Orientation="Vertical">        
        <TextBlock Text="更新提示：" Margin="10,0,0,0" FontSize="15" FontWeight="Bold"/>
        <TextBox Name="txtUpdate" Margin="5" Height="150"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Top"
                 />        
        <TextBlock Text="下载地址：(单击使用浏览器下载)"/>
        <TextBlock Name="navTxt" Margin="2,0" TextWrapping="Wrap">            
            <Hyperlink Name="hlink0" NavigateUri="https://gitee.com/LvYiWuHen/byserial">项目地址</Hyperlink>            
        </TextBlock>
        <TextBlock Name="downTip"/>
    </StackPanel>
</Window>
