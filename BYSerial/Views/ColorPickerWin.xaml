<Window x:Class="BYSerial.Views.ColorPickerWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BYSerial.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="ColorPicker" Height="395" Width="247"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        >
    <Grid>
        <hc:ColorPicker 
            SelectedBrush="#000000" 
            Name="ColorSel"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Canceled="ColorSel_Canceled"
            SelectedColorChanged="ColorSel_SelectedColorChanged"
            Confirmed="ColorSel_Confirmed"
            />
    </Grid>
</Window>
